<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView_advisory" />

        <TextView
            android:text="@string/crop_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_advisory"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView_crop_calendar"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TableLayout
            android:id="@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView_crop_calendar"
            android:layout_alignLeft="@+id/textView_advisory"
            android:layout_alignStart="@+id/textView_advisory"
            android:layout_marginTop="16dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp">


        </TableLayout>

    </RelativeLayout>


</ScrollView>
