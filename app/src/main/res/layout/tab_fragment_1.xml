<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tab_frag1_viewgroup">



    <TextView
        android:id="@+id/textView_cityname_frag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="123"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

   <ImageView
        android:id="@+id/imageView_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
       android:scaleType="fitStart"
       android:adjustViewBounds="true">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_forecast_parameter"/>



        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_forecast_type"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/fetch"
            android:background="#FFF"
            android:id="@+id/imageButton_showmap" />


        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/graph"
            android:background="#FFF"
            android:id="@+id/imageButton_showgraph" />

    </LinearLayout>

</LinearLayout>