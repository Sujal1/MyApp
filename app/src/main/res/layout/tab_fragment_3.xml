<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/tabfragment3_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webviewCrop">

        </WebView>


        <TextView
            android:text="This is a test text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical|top"
            android:id="@+id/textView_day"
            android:paddingTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/left"
            android:paddingTop="10dp"
            android:layout_gravity="top|left"
            android:id="@+id/imgBtn_left"
            android:background="@null"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right"
            android:layout_x="12dp"
            android:layout_y="12dp"
            android:paddingTop="10dp"
            android:layout_gravity="top|right"
            android:id="@+id/imgBtn_right"
            android:elevation="0dp"
            android:background="@null"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/raintcolor"
            android:id="@+id/imageView_colorbar"
            android:scaleType="fitCenter"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:paddingTop="100dp"
            android:layout_gravity="center_horizontal|center_vertical|bottom"
            android:adjustViewBounds="true" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical|bottom"
            android:id="@+id/spinner_crop_params"
            style="@style/spinner_style" />

    </FrameLayout>


   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->




   <!-- </LinearLayout>-->


</LinearLayout>